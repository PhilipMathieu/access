# Git LFS tracking for large data files
# Track all files in large data directories
data/graphs/** filter=lfs diff=lfs merge=lfs -text
data/blocks/** filter=lfs diff=lfs merge=lfs -text
data/conserved_lands/** filter=lfs diff=lfs merge=lfs -text
data/tracts/** filter=lfs diff=lfs merge=lfs -text
data/walk_times/** filter=lfs diff=lfs merge=lfs -text
data/joins/** filter=lfs diff=lfs merge=lfs -text

# Track large individual files
data/*.zip filter=lfs diff=lfs merge=lfs -text
data/*.txt filter=lfs diff=lfs merge=lfs -text
data/*.json filter=lfs diff=lfs merge=lfs -text
data/*.svg filter=lfs diff=lfs merge=lfs -text

# Track shapefile components
data/**/*.shp filter=lfs diff=lfs merge=lfs -text
data/**/*.shx filter=lfs diff=lfs merge=lfs -text
data/**/*.dbf filter=lfs diff=lfs merge=lfs -text
data/**/*.prj filter=lfs diff=lfs merge=lfs -text
data/**/*.cpg filter=lfs diff=lfs merge=lfs -text

# Track graph files
data/**/*.graphml filter=lfs diff=lfs merge=lfs -text

